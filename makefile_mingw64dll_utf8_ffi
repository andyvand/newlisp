# makefile for newLISP  DLL v. 10.x.x on Windows DLL FFI LLP64 64-bit
#

OBJS = newlisp.o nl-symbol.o nl-math.o nl-list.o nl-liststr.o nl-string.o nl-filesys.o \
	nl-sock.o nl-import.o nl-xml-json.o nl-web.o nl-matrix.o nl-debug.o pcre.o \
	nl-utf8.o win-util.o win-path.o win-dll.o

CFLAGS = -m64 -Wall -c -O1 -DNEWLISP64 -DWINDOWS -DSUPPORT_UTF8 -DFFI -DLIBRARY 

CC = gcc
STRIP = strip
WRAP = dllwrap

default: $(OBJS)
	$(WRAP) -m64 *.o --def win-dll.def -Wl,--enable-stdcall-fixup -lffi -lws2_32 \
	-o newlisp.dll 
	$(STRIP) newlisp.dll

.c.o:
	$(CC) $(CFLAGS) $<

$(OBJS): primes.h protos.h makefile_mingw64dll_utf8_ffi


